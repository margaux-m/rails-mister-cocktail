<div class="form-container">
  <h1>Edit <%= @cocktail.name %> cocktail</h1>
  <%= simple_form_for(@cocktail) do |f| %>
    <%= f.input :name %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, 'Edit cocktail', class: "btn btn-primary btn-margin" %>
    <%= link_to 'Cancel', cocktail_path(@cocktail), display: :inline, class: "btn btn-margin btn-outline" %>
  <% end %>
</div>
